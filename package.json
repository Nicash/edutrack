{
  "name": "edutrack",
  "version": "1.0.0",
  "description": "Sistema de Gestión Educativa - API REST con Node.js, TypeScript y MongoDB para la UTN",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "developer": "tsc-watch --onSuccess \"node dist/app.js\"",
    "watch": "tsc-watch --onSuccess \"node dist/app.js\"",
    "build": "tsc",
    "start": "node dist/app.js"
  },
  "keywords": ["edutrack", "api", "typescript", "nodejs", "express", "mongodb", "education", "utn"],
  "author": "Marcos Gómez y Nicolás Chaves - UTN FRVT",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^7.0.2",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  }
}
